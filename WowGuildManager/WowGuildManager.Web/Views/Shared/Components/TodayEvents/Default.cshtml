@model WowGuildManager.Models.ViewModels.Events.TodayEventsViewModel

<h2 class="w-50 mx-auto text-center m-4">Today's events</h2>

<table class="table table-sm table-hover table-dark">
    <tbody>
        @if (Model.Raids.Any())
        {
            <tr>
                <th colspan="2" class="text-center">Raids</th>
            </tr>
            @foreach (var raid in Model.Raids)
            {
                <tr class="w-50 mx-auto text-center">
                    <th><a asp-area="" asp-controller="Raids" asp-action="Details" asp-route-id="@raid.Id" class="btn btn-danger btn-sm w-25">@raid.Destination</a></th>
                </tr>
            }
        }
        @if (Model.Dungeons.Any())
        {
            <tr>
                <th colspan="2" class="text-center ">Dungeons</th>
            </tr>
            @foreach (var dungeon in Model.Dungeons)
            {
                <tr class="w-50 mx-auto text-center">
                    <th><a asp-area="" asp-controller="Dungeons" asp-action="Details" asp-route-id="@dungeon.Id" class="btn btn-warning btn-sm w-25">@dungeon.Destination</a></th>
                </tr>
            }
        }
    </tbody>
</table>