@model WowGuildManager.Models.ViewModels.Admin.AdminIndexViewModel
@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid bc">
    <h2 class="text-center text-danger"><u>Welcome to Administration page.</u></h2>
    <div class="row d-flex justify-content-around">
        <div class="col-sm-auto">
            <h3 class="text-warning">Total users: @Model.RegisteredUsersCount</h3>
        </div>
        <div class="col-sm-auto">
            <h3 class="text-warning">Total characters: @Model.RegisteredCharactersCount</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-auto w-100">
            <vc:select-guild-master></vc:select-guild-master>
        </div>
    </div>
</div>
