@model WowGuildManager.Models.BindingModels.Guilds.GuildMasterViewModel

<div class="container-fluid bc">
    <h2 class="text-center text-danger"><u>Welcome to Guild Master page.</u></h2>
    <div class="row">
        <div class="col-sm-auto">
            <h3 class="text-warning">Total characters: @Model.RegisteredCharactersCount</h3>
        </div>
    </div>
    <div class="list-group">
        <h3>Promoting user to Raid Leader will give them right to create Raid Events.</h3>
        @foreach (var user in Model.Users)
        {
            @if (user.IsRaidLeader && user.IsGuildMaster)
            {
                <a asp-area="" asp-controller="Guild" asp-action="SetOrUnsetRaidLeader" type="button" asp-route-userId="@user.Id" class="list-group-item list-group-item-info">@user.Name (Raid Leader) (Guild Master)</a>
            }
            else if (user.IsRaidLeader)
            {
                <a asp-area="" asp-controller="Guild" asp-action="SetOrUnsetRaidLeader" type="button" asp-route-userId="@user.Id" class="list-group-item list-group-item-info">@user.Name (Raid Leader)</a>
            }
            else
            {
                <a asp-area="" asp-controller="Guild" asp-action="SetOrUnsetRaidLeader" type="button" asp-route-userId="@user.Id" class="list-group-item list-group-item-action">@user.Name</a>
            }
        }
    </div>
    <div>
        <h3>Adjust guild progress from here.</h3>
        @foreach (var raidDestination in Model.RaidDestinations)
        {
            <div class="m-2">
                <div class="row">
                    <div class="col-sm-auto col-md-4">
                        <h6 class="text-center text-warning">@raidDestination.Name: @raidDestination.KilledBosses/@raidDestination.TotalBosses</h6>
                    </div>
                    <div class="col-sm-auto col-md-1">
                        <div>
                            <a asp-area="" asp-controller="Guild" asp-action="AddProgress" asp-route-raidName="@raidDestination.Name" class="btn btn-success btn-sm border border-dark"><i class="fas fa-plus-square"></i></a>
                            <a asp-area="" asp-controller="Guild" asp-action="RemoveProgress" asp-route-raidName="@raidDestination.Name" class="btn btn-danger btn-sm border border-dark"><i class="fas fa-minus-square"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


