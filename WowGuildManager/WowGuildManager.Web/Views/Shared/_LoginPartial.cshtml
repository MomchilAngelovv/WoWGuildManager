@inject SignInManager<WowGuildManagerUser> SignInManager
@inject UserManager<WowGuildManagerUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="ml-auto">
        <div class="navbar-nav">
            <div class="nav-item">
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" class="nav-link"><i class="fas fa-user"></i> @UserManager.GetUserName(User)</a>
            </div>
            <div class="nav-item">
                <button type="submit" class="btn btn-link navbar-btn nav-link"><i class="fas fa-sign-out-alt"></i> Logout</button>
            </div>
        </div>
    </form>
}
else
{
    <div class="navbar-nav ml-auto">
        <div class="nav-item"><a asp-area="Identity" asp-page="/Account/Register" class="nav-link"><i class="far fa-registered"></i> Register</a></div>
        <div class="nav-item"><a asp-area="Identity" asp-page="/Account/Login" class="nav-link"><i class="fas fa-sign-in-alt"></i> Log in</a></div>
    </div>
}