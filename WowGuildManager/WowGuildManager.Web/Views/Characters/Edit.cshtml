@model WowGuildManager.Models.BindingModels.Characters.CharacterEditBindingModel
@{
    ViewData["Title"] = "Edit";
}

<div class="container-fluid bc">
    <h3>Edit character</h3>
    <hr class="bg-warning" />

    <div class="row d-flex justify-content-between">
        <div class="col-lg-4">
            <p>Current level: @Model.Level</p>
            <p>Current role: @Model.Role</p>
        </div>

        <div class="col-lg-4">
            <form asp-controller="Characters" asp-action="EditAsync" method="post">
                <div class="form-group">
                    <input asp-for="Level" value="@Model.Level" class="form-control" />
                    <span asp-validation-for="Level" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <select id="role" asp-for="@Model.Role" asp-items="@((IEnumerable<SelectListItem>)ViewData["Roles"])" class="form-control border-dark"></select>
                    <span asp-validation-for="@Model.Role" class="text-danger"></span>
                </div>

                <div class="input-group form-group">
                    <input asp-for="CharacterId" value="@Model.CharacterId" hidden />
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-info w-100 border-dark">Save changes</button>
                </div>
            </form>
        </div>
    </div>

    <hr class="bg-warning" />

    <div class="d-flex justify-content-end mb-3">
        <a asp-controller="Characters" asp-action="Index" class="btn btn-warning border border-dark">Back to characters</a>
        <a asp-controller="Characters" asp-action="Delete" asp-route-id="@Model.CharacterId" class="btn btn-danger border border-dark">Delete characeter</a>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script>
        $('#role').val(@Model.Role)
    </script>
}
