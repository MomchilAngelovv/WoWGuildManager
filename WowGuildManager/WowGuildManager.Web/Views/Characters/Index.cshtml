@model WowGuildManager.Models.ViewModels.Characters.CharacterIndexViewModel
@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid bc">
    <div class="row d-flex justify-content-start">
        <div class="col-lg-4 col-sm-auto mt-3">
            <a asp-area="" asp-controller="Characters" asp-action="Create" class="btn btn-warning btn-sm border-dark w-100"><h2>Add character</h2></a>
        </div>
    </div>

    @if (this.TempData["NewCharacter"] != null)
    {
        <div id="new-character-alert" class="alert alert-success mt-3" role="alert">
            @this.TempData["NewCharacter"]
        </div>
    }

    <hr class="bg-warning" />

    <div class="row d-flex justify-content-center">
        <div class="card-deck m-3">
            @foreach (var character in Model.Characters)
            {
                <div class="card bg-dark border border-warning text-warning" style="width: 20rem;">
                    <a asp-area="" asp-controller="Characters" asp-action="Details" asp-route-id="@character.Id"><img class="card-img-top" src="@character.Image" style="height:260px;"></a>
                    <div class="card-body">
                        <h5 class="card-title">@character.Name</h5>
                        <p class="card-text">@character.Level @character.Class @character.Role</p>
                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        <small class="text-danger">@character.Rank</small>
                        <a asp-area="" asp-controller="Characters" asp-action="Edit" asp-route-id="@character.Id" class="btn btn-info btn-sm">Edit character info</a>
                    </div>
                </div>
            }
        </div>
    </div>

    <hr class="bg-warning" />
</div>

@section Scripts {
    <script>
        setTimeout(function () {
            $('#new-character-alert').toggle(100);
        }, 3000);
    </script>
}

