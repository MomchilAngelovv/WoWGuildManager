@model WowGuildManager.Models.BindingModels.Characters.CharacterCreateBindingModel
@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid">
    <div class="row d-flex justify-content-center">
        <div class="card-login col-lg-6 p-0">
            <div class="card-body">
                <section>
                    <form asp-controller="Characters" asp-action="CreateAsync" method="post">
                        <h2 class="text-center mt-3">Create new character</h2>
                        <hr class="bg-warning" />

                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="input-group form-group">
                            <input asp-for="@Model.Name" class="form-control border-dark" placeholder="Name..." />
                        </div>

                        <div class="form-group">
                            <input asp-for="@Model.Level" class="form-control border-dark" placeholder="Level..." />
                        </div>

                        <div id="class" class="form-group">
                            <select asp-for="@Model.Class" asp-items="@((IEnumerable<SelectListItem>)ViewData["Classes"])" class="form-control border-dark">
                                <option disabled selected> -- Class -- </option>
                            </select>
                        </div>
                        <div id="role" class="form-group">
                            <select asp-for="@Model.Role" asp-items="@((IEnumerable<SelectListItem>)ViewData["Roles"])" class="form-control border-dark">
                                <option disabled selected> -- Role -- </option>
                            </select>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-warning w-100 border-dark">Create</button>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


