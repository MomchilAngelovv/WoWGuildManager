@model WowGuildManager.Models.ViewModels.Characters.CharacterDeleteViewModel

<div class="container-fluid bc">
    <h2>Are you sure you want to delete this character?</h2>
    <hr class="bg-warning" />

    <div class="row">
        <div class="col-lg-4">
            <p>Name: @Model.Name</p>
            <p>Rank: @Model.Rank</p>
            <p>Role: @Model.Role</p>
        </div>
    </div>

    <form asp-controller="Characters" asp-action="DeleteAsync" method="post">
        <div class="input-group form-group">
            <input asp-for="Id" hidden />
        </div>
        <button type="submit" class="btn btn-danger w-25 mb-3">Delete characeter</button>
    </form>

    <a asp-controller="Characters" asp-action="Index" class="btn btn-warning w-25">Back to characters</a>
    <hr class="bg-warning" />
</div>

