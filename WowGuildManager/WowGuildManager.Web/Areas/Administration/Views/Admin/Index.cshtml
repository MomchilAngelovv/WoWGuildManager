@model WowGuildManager.Models.ViewModels.Admin.AdminIndexViewModel
@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid bc">
    <h2 class="text-center text-danger"><u>Welcome to Administration page.</u></h2>
    <div class="row">
        <div class="col-lg-4">
            <h3 class="text-warning">Total registered users: @Model.RegisteredUsersCount</h3>
        </div>
        <div class="col-lg-4">
            <h3 class="text-warning">Total registered characters: @Model.RegisteredCharactersCount</h3>
        </div>
    </div>

    <hr class="bg-warning" />

    <div class="row">
        <div class="col-sm-auto w-100 mb-3">
            <vc:select-guild-master></vc:select-guild-master>
        </div>
    </div>  
</div>
