<h1 class="text-white text-center">Welcome to Iceblock Citadel</h1>
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <a asp-area="" asp-controller="Calendar" asp-action="Index"><img class="d-block w-100" src="https://i.imgur.com/nhHsQg1.jpg" alt="First slide"></a>
        </div>
        <div class="carousel-item">
            <a asp-area="" asp-controller="Armory" asp-action="Index"><img class="d-block w-100" src="https://i.imgur.com/nhHsQg1.jpg" alt="Second slide"></a>
        </div>
        <div class="carousel-item">
            <a asp-area="" asp-controller="Gallery" asp-action="Index"><img class="d-block w-100" src="https://i.imgur.com/nhHsQg1.jpg" alt="Third slide"></a>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>